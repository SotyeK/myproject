{% extends 'base.html.twig' %}

{% block title %}Collectors index{% endblock %}

{% block body %}
    <h1>Collectors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collector in collectors %}
            <tr>
                <td>{{ collector.id }}</td>
                <td>{{ collector.Title }}</td>
                <td>{{ collector.Price }}</td>
                <td>
                    <a href="{{ path('app_collectors_show', {'id': collector.id}) }}">show</a>
                    <a href="{{ path('app_collectors_edit', {'id': collector.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collectors_new') }}">Create new</a>
{% endblock %}
